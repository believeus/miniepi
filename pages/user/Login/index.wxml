<!--pages/user/Login/index.wxml-->
 <view class="page">
<view style="margin-top:5%;text-align: center">
<image src="/image/icons/logo.png" style="width:60px;height:60px"></image>
<view style="font-size:15px;margin-top:4%;opacity: 0.7">Login</view>
</view>


<view style="padding-left:6%;width:98%;margin-top:10%;" class="font">
<view class="email" style="border:solid 1px #949494;width:85%;border-radius: 10px;">
    <input class="input" name="email" placeholder="Email"
    bindinput ="email"/>
  </view>


<view class="itemView" style="border:solid 1px #949494;width:85%;border-radius: 10px;margin-top:6%;">
    <input class="input" name="password" placeholder="Password"
     bindinput="passWdInput" />
  </view>
  </view>

<view style="margin-top:5%;text-align: center;padding-left:6%;">
<view style="color:#0E6EB8;font-size:12px;" bindtap="forget">Forget password?</view>
<view style="background-color:#0E6EB8; margin-top:6%;width:90%;"bindtap="login">
<text style="color:#FFFFFF"class="font">LOGIN</text>
</view>
<view style="margin-top:6%;padding-right:15%"class="font">
Don't have an account?
</view>
<view style="margin-top:3%;color:#0E6EB8;padding-right:15%"class="font"bindtap="register">
Register
</view>

</view>















</view>
